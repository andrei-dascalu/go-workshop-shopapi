; https://editorconfig.org/
root = true

[*]
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4
end_of_line = lf

[*.md]
trim_trailing_whitespace = false

[Dockerfile]
indent_size = 2
indent_style = space

[*.{yml,yaml}]
indent_size = 2
indent_style = space

[*.json]
indent_size = 2
indent_style = space
